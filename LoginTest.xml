<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="LoginFlow">
    <test name="Login positive test">
        <classes>
            <class name="loginflow.positive.LoginFlowPositiveTest"/>
        </classes>
    </test>
    <test name="Login negative test">
        <parameter name="invalidLogin" value="Adm"/>
        <parameter name="invalidPassword" value="Adm"/>
        <classes>
            <class name="loginflow.negative.LoginFlowNegativeTest"/>
        </classes>
    </test>
    <test name="Login with cookies">
       <classes>
            <class name="loginviacookies.LogInWithCookiesTest"/>
        </classes>
    </test>
</suite>


